{
    "version": 2,
    "builds": [
        {
            "src": "server.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/chat",
            "dest": "server.py"
        },
        {
            "src": "/(.*)",
            "dest": "server.py"
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1"
    }
} 